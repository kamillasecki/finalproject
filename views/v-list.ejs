<!DOCTYPE html>
<html ng-app="list">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>category</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/angular-growl-v2/build/angular-growl.min.css">
    <link rel="stylesheet" href="/lib/font-awesome/web-fonts-with-css/css/fontawesome-all.css">
    <link rel="stylesheet" href="/stylesheets/styles.min.css">
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/angular/angular.min.js"></script>
    <script src="/lib/angular-growl-v2/build/angular-growl.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>

</head>

<body ng-controller="mainController">
    <% include ./index_partials/navbar %>
        <ol class="breadcrumb">
            <li ng-repeat="cat in parents | orderBy:'-'"><a href="/category?id={{cat._id}}"><span ng-bind="cat.name"></span></a></li>
        </ol>

        <div class="row">
            <div class="col-md-2" style="padding:36px;">
                Subcategories:
                <ul class="list-group">
                    <li class="list-group-item" ng-repeat="catt in parents[0].categoriesId" style="padding-bottom: 30px;">
                        <a href="/list?id={{catt._id}}" class="col-md-11" ng-bind="catt.name"></a>
                    </li>
                </ul>
            </div>

            <!--===========MAIN=============-->

            <div class="col-md-8" style="margin:0px;padding:30px;">
                <div>
                    <a href="/newpost?id={{id}}" class="btn btn-success">
                        Create new post
                    </a>
                </div>
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>Subject</th>
                            <th>Added</th>
                            <th>Replies</th>
                            <th>Attributes</th>
                            <th>Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="post in posts">
                            <td>
                                <a href="/post?id={{post._id}}" class="col-md-11" ng-bind="post.header.subject"></a>
                            </td>
                            <td>
                                {{post.createdAtWords}}
                            </td>
                            <td>
                                {{post.replies.length}}
                            </td>
                            <td>
                                <span ng-if="post.settings.privacy=='pub'" class="badge progress-bar-success" data-toggle="tooltip" title="Public">Pub</span></h6>
                                <span ng-if="post.settings.privacy=='cgp'" class="badge progress-bar-danger" data-toggle="tooltip" title="Closed Group">CG</span></h6>
                                <span ng-if="post.settings.privacy=='cgh'" class="badge progress-bar-dark" data-toggle="tooltip" title="Closed Group - Private">P</span></h6>
                                <span ng-if="post.settings.author==user" class="badge progress-bar-info" data-toggle="tooltip" title="You are an author">A</span></h6>
                                <span ng-if="post.settings.encryption.isEnabled" class="badge progress-bar-warning" data-toggle="tooltip" title="Encrypted">E</span></h6>
                            </td>
                            <td>
                                {{post.header.votes.num}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            <% include ./index_partials/footer %>
            </div>
            <div class="col-md-2"></div>
        </div>

        <script src="/lib/ng-list.js"></script>
</body>

</html>
